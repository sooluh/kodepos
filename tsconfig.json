{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "target": "ES2019",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
